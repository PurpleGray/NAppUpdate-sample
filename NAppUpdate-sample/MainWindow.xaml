<Window x:Class="NAppUpdate_sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAppUpdate_sample"
        mc:Ignorable="d"
        Title="NAppUpdate sample" Height="150" Width="200" FontSize="14" FontFamily="Courier New" FontWeight="Medium">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="{Binding AppVersion}" />
        <Button Grid.Row="1" Content="Check for updates" Command="{Binding CheckUpdates}" />
    </Grid>
</Window>
